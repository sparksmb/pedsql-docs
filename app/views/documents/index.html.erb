<p id="notice"><%= notice %></p>

<h1>Documents</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>File Type</th>
      <th>Last Updated</th>
      <th width="10%"></th>
    </tr>
  </thead>

  <tbody>
    <% @documents.each do |document| %>
      <tr>
        <td><%= document.name %></td>
        <td><%= document.file_type %></td>
        <td><%= document.updated_at.strftime("%m/%d/%Y %I:%M %P") %></td>
        <td class="action"><%= link_to 'Show', document %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

